<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorSecondary">@color/primary</item>
        <item name="colorError">@color/error</item>
        <item name="materialAlertDialogTheme">@style/AlertDialog</item>
        <item name="textInputStyle">@style/TextField</item>
    </style>

    <style name="LoadingDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:backgroundDimAmount">0.32</item>
    </style>

    <style name="AlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialogButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialogButton</item>
        <item name="materialAlertDialogBodyTextStyle">@style/AlertDialogBodyText</item>
    </style>

    <style name="AlertDialogButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AlertDialogBodyText" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="helperTextTextAppearance">@style/TextFieldHelperText</item>
    </style>

    <style name="TextFieldHelperText" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="DatePickerDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:datePickerStyle">@style/DatePicker</item>
        <item name="android:textSize">@dimen/text1</item>
    </style>

    <style name="DatePicker" parent="android:Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
    </style>

    <style name="AvatarActivity" parent="Theme.MaterialComponents">
        <item name="android:statusBarColor">#121212</item>
        <item name="android:navigationBarColor">#121212</item>
    </style>

    <style name="UCropActivity" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:navigationBarColor">#000</item>
    </style>

    <style name="OAuthActivity" parent="Theme.MaterialComponents.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="android:background">@color/border2</item>
    </style>

    <style name="LoadingActivity" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">#fff</item>
    </style>

    <style name="ScanCodeActivity" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="android:statusBarColor">#121212</item>
        <item name="android:navigationBarColor">#121212</item>
        <item name="materialAlertDialogTheme">@style/AlertDialog</item>
    </style>

</resources>
