<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="MainButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/bg</item>
        <item name="iconPadding">10dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="cornerRadius">10dp</item>
        <item name="rippleColor">#aaa</item>
    </style>

    <style name="UserInfoItem">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="UserInfoItemLabel">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text3</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="UserInfoItemText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text3</item>
    </style>

    <style name="LoadingDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="colorAccent">@color/info</item>
        <item name="android:background">@color/bg</item>
        <item name="android:textSize">@dimen/text2</item>
    </style>

    <style name="MyAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/MyAlertDialogButton</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MyAlertDialogBodyText</item>
    </style>

    <style name="MyAlertDialogButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textSize">@dimen/text1</item>
    </style>

    <style name="MyAlertDialogBodyText" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textSize">@dimen/text2</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="GenderRadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text3</item>
        <item name="android:paddingLeft">15dp</item>
    </style>

    <style name="OAuthActivityTheme" parent="Theme.MaterialComponents.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="android:background">@color/bg</item>
    </style>
</resources>
